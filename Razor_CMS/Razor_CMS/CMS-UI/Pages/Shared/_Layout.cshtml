<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CMS-UI</title>
	<link rel="stylesheet" href="~/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CMS-UI.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg bg-primary mb-3" data-bs-theme="dark">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-page="/Index">CMS-UI</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link   text-white" asp-area="" asp-page="/Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link  text-white" asp-area="" asp-page="/Privacy">Privacy</a>
						</li>
					
						@{
							var token = Context.Session.GetString("Token");
						}
						@if (string.IsNullOrEmpty(token))
						{
					
							<li class="nav-item">
								<a class="nav-link   text-white" asp-page="/Authentication/Login">Log In</a>
							</li>
							<li class="nav-item">
								<a class="nav-link  text-white" asp-page="/Authentication/Register">Register</a>
							</li>
						
						}
						else
						{

							@if (true)
							{
								<div class="btn-group" role="group" aria-label="Button group with nested dropdown">
									<button type="button" class="btn  text-white" onclick="window.location.href='/Admin'">Admin</button>
									<div class="btn-group" role="group">
										<button id="btnGroupDrop1" type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
										<div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
											<a class="dropdown-item text-white" href="/Admin/Users">Users</a>
											<a class="dropdown-item text-white" href="/Admin/Roles">Roles</a>
											<a class="dropdown-item text-white" href="/Admin/Permissions">Permissions</a>
										</div>
									</div>
								</div>
							}
							<ul class="navbar-nav ms-auto">
								<li class="nav-item">
									<a class="nav-link mb-6  text-white" asp-area="" asp-page="/Authentication/SignOut">Sign Out</a>
								</li>
							</ul>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - CMS_UI - <a asp-area="" asp-page="/Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>